@model BanHang.Models.HomeModel
@{
    ViewBag.Title = "Main";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- ========================= SECTION PAGETOP ========================= -->
<section class="section-pagetop bg-gray">
    <div class="container">
        <h2 class="title-page">My account</h2>
    </div> <!-- container //  -->
</section>
<!-- ========================= SECTION PAGETOP END// ========================= -->
<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content padding-y">
    <div class="container">
        <div class="row">
            <aside class="col-md-3">
                <nav class="list-group">
                    <a class="list-group-item active" href="/thong-tin/@Session["idUser"]"> Thông tin tài khoản </a>
                    <a class="list-group-item" href="#"> Địa chỉ </a>
                    <a class="list-group-item " href="/dat-hang/@Session["idUser"]"> Đơn đặt hàng </a>
                    <a class="list-group-item" href="#"> Yêu thích </a>
                    <a class="list-group-item" href="#"> Cài đặt </a>
                    <a class="list-group-item" href="/dang-xuat"> Đăng xuất </a>
                </nav>
            </aside> <!-- col.// -->
            <main class="col-md-9">
                @if (Model.ListUser.Where(n => n.Id == int.Parse(Session["idUser"].ToString())) != null)
                {
                    foreach (var item in Model.ListUser)
                    {
                    <article class="card mb-3">
                        <div class="card-body">
                            <figure class="icontext">
                                <div class="icon">
                                    <img class="rounded-circle img-sm border" src="~/Content/images/avatars/@item.Avartar">
                                </div>
                                <div class="text">
                                    <strong> @Session["FullName"] </strong> <br>
                                    <p class="mb-2"> @item.Email </p>
                                    <a href="#" class="btn btn-light btn-sm">Chỉnh sửa</a>
                                </div>
                            </figure>
                            <hr>
                            <p>
                                <i class="fa fa-map-marker text-muted"></i> &nbsp; Địa chỉ:
                                <br>
                                @Session["Address"]
                                <a href="#" class="btn-link"> Edit</a>
                            </p>



                            <article class="card-group card-stat">
                                <figure class="card bg">
                                    <div class="p-3">
                                        <h4 class="title">38</h4>
                                        <span>Orders</span>
                                    </div>
                                </figure>
                                <figure class="card bg">
                                    <div class="p-3">
                                        <h4 class="title">5</h4>
                                        <span>Wishlists</span>
                                    </div>
                                </figure>
                                <figure class="card bg">
                                    <div class="p-3">
                                        <h4 class="title">12</h4>
                                        <span>Awaiting delivery</span>
                                    </div>
                                </figure>
                                <figure class="card bg">
                                    <div class="p-3">
                                        <h4 class="title">50</h4>
                                        <span>Delivered items</span>
                                    </div>
                                </figure>
                            </article>


                        </div> <!-- card-body .// -->
                    </article> <!-- card.// -->}
                    }
                </main> <!-- col.// -->
        </div>

    </div> <!-- container .//  -->
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->
