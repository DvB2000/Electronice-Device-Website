@model BanHang.Context.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Trang Xóa Sản Phẩm</h2>

<script src="~/Scripts/ckeditor/ckeditor.js"></script>
<div>
    <h2>@Model.Name</h2>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            <img id="Avatar" class="hide" src="~/Content/images/items/@Model.Avartar" width="107" height="98" alt="" /><br />

            @Html.DisplayNameFor(model => model.Avartar)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Avartar)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CategoryId)
        </dt>

        <dd>
            @if (Model.CategoryId == 1)
            {
                <p>Điện thoại</p>
            }
            else if (Model.CategoryId == 2)
            {
                <p>Máy tính</p>
            }
            else if (Model.CategoryId == 3)
            {
                <p>Máy tính bảng</p>
            }
            else if (Model.CategoryId == 4)
            {
                <p>Phụ kiện</p>
            }
            else if (Model.CategoryId == 5)
            {
                <p>Đồng hồ thời trang</p>
            }
            else if (Model.CategoryId == 6)
            {
                <p>Đồng hồ thông minh</p>
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ShortDes)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ShortDes)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FullDescription)
        </dt>

        <dd>
            @Html.Raw(Model.FullDescription)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
             @Html.Raw(Model.FullDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PriceDiscount)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TypeId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TypeId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Slug)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Slug)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BrandId)
        </dt>

        <dd>
            @if (Model.BrandId == 1)
            {
                <p>Apple</p>
            }
            else if (Model.BrandId == 2)
            {
                <p>Samsung</p>
            }
            else if (Model.BrandId == 3)
            {
                <p>Xiaomi</p>
            }
            else if (Model.BrandId == 4)
            {
                <p>Dell</p>
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Deleted)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Deleted)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ShowOnHomePage)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ShowOnHomePage)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DisplayOrder)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DisplayOrder)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedOnUtc)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedOnUtc)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UpdatedOnUtc)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UpdatedOnUtc)
        </dd>

    </dl>

    @using (Html.BeginForm("Delete", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Trở về trang quản trị", "Index")
        </div>
    }
</div>
